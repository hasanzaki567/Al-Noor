# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/alnoor

# Session Secret - Change this in production!
SESSION_SECRET=your-super-secret-session-key-change-this

# Client URL for CORS
CLIENT_URL=http://localhost:5173

# Password Hashing - bcrypt salt rounds (10-12 recommended, higher = more secure but slower)
BCRYPT_SALT_ROUNDS=12

# Server URL used for callback (include protocol and domain if deployed)
SERVER_URL=http://localhost:5000

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign-In (Service ID, Team ID, Key ID, and path to .p8 private key)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=./keys/AuthKey_ABC123XYZ.p8
